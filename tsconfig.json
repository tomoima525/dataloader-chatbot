{
  "extends": "@tsconfig/node18/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es2020",
    "lib": ["es2021", "ES2022.Object", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/test", "dist"]
}
